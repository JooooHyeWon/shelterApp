<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@android:anim/accelerate_interpolator"
    android:shareInterpolator="true"
    android:fillAfter="true">

    <scale
        android:startOffset="3000"  android:duration="2000"
        android:fromXScale="0.1" android:toXScale="2"
        android:fromYScale="0.1" android:toYScale="2"
        android:pivotX="50%" android:pivotY="50%"/>
    <translate
        android:startOffset="2400" android:duration="2000"
        android:fromYDelta="-50%" android:toYDelta="-50%p" />
</set>